{
  "preset": "ts-jest",
  "roots": ["<rootDir>/tests/jest"],
  "testMatch": ["**/jest/**/*.+(tsx|js)", "**/?(*.)+(spec|test).+(ts|tsx|js)"],
  "transform": {
    "^.+\\.(ts|tsx)$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.app.json"
      }
    ]
  },
  "testEnvironment": "jsdom",
  "setupFiles": ["<rootDir>/tests/jest/setupTests.ts"]
}
