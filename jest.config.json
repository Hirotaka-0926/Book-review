{
  "preset": "ts-jest",
  "roots": ["<rootDir>/tests/jest"],
  "testMatch": [
    "**/jest/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.app.json"
      }
    ]
  },
  "testEnvironment": "jsdom"
}
